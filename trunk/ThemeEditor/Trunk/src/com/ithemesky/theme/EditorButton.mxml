<?xml version="1.0" encoding="utf-8"?>
<mx:Image xmlns:mx="http://www.adobe.com/2006/mxml" mouseOver="image1_mouseOverHandler(event)" mouseOut="image1_mouseOutHandler(event)" source="{_image}">
	<mx:Script>
		<![CDATA[
			private var _path:String = "Resources/Image/EditorButtons/";
			private var _imageName:String = "";
			[Bindable]
			private var _image:String = "";

			public function set ImageName(value:String):void
			{
				_imageName = value;
				_image =  _path + _imageName + ".png";
			}
			public function get ImageName():String
			{
				return _imageName;
			}
			protected function image1_mouseOverHandler(event:MouseEvent):void
			{
				this._image = _path + _imageName + "_hover.png";
			}


			protected function image1_mouseOutHandler(event:MouseEvent):void
			{
				this._image = _path + _imageName + ".png";
			}

		]]>
	</mx:Script>
</mx:Image>
